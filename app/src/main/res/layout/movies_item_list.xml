<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:orientation="vertical"

              android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
              android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
              android:layout_marginBottom="8dp" android:background="@android:color/white">

    <ImageView
            android:id="@+id/imgViewImageUrl"
            android:layout_width="match_parent"
            android:layout_height="404dp" app:srcCompat="@mipmap/ic_launcher"/>
    <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/txtDisplayTitle"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView

            android:id="@+id/txtHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView

            android:id="@+id/txtOpeningDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</LinearLayout>